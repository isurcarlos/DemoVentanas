<Window x:Class="DemoVentanas.Dialogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialogo" Height="185" Width="376" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="106*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <Button Content="Cerrar" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="267,9,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" IsCancel="True" />
        <Label Content="No podrá continuar hasta dar click en Cerrar" HorizontalAlignment="Stretch" Margin="12,12,0,0" Name="label1" VerticalAlignment="Stretch" />
        <Button Content="Aceptar" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="181,9,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" IsDefault="True" />
    </Grid>
</Window>
